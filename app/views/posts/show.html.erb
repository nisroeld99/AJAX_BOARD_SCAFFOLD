<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Replies</strong>
  <ul id=comments>
    <% @post.replies.each do |reply| %>
      <%= render partial: "replies/replies", locals: {reply: reply} %>
    <%end%>
  </ul>
</p>

<p>
  <%= form_for [@post, @post.replies.new], remote: true do |f| %>
    <%= f.text_area :content %>
    <%= f.submit %>
  <%end%>

</p>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Delete', post_path, method: :DELETE %>
<%= link_to 'Back', posts_path %>
